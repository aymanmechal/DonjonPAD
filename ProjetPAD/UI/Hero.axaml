<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProjetPAD.UI.HeroWindow"
        Width="700" Height="450"
        Title="Gestion des héros">

    <Grid ColumnDefinitions="*,Auto,*" Margin="10">

        <!-- ACTIFS -->
        <StackPanel>
            <TextBlock Text="Héros actifs" FontSize="16"/>
            <ListBox x:Name="ActiveHeroesList" Height="200"/>
            <Button Content="➡ Mettre en réserve"
                    Margin="0,5,0,0"
                    Click="OnMoveToReserve"/>
        </StackPanel>
        

        <!-- CENTRE -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Potions" FontSize="16"/>
            <ListBox x:Name="PotionList" Height="120"/>
            <Button Content="Utiliser potion"
                    Margin="0,5,0,0"
                    Click="OnUsePotion"/>
            <TextBlock x:Name="InfoText" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- RÉSERVE -->
        <StackPanel Grid.Column="2">
            <TextBlock Text="Héros en réserve" FontSize="16"/>
            <ListBox x:Name="ReserveHeroesList" Height="200"/>
            <Button Content="⬅ Activer (max 4)"
                    Margin="0,5,0,0"
                    Click="OnActivateHero"/>
        </StackPanel>

    </Grid>
</Window>