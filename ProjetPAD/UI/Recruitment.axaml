<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:ProjetPAD.Models"
        x:Class="ProjetPAD.UI.Recruitment"
        Width="400"
        Height="300"
        Title="Recrutement">

    <StackPanel Margin="10" Spacing="10">

        <TextBlock Text="HÃ©ros disponibles" FontSize="16"/>

        <ListBox x:Name="HeroesList"
                 Height="180">

            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:Hero">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Name}" Width="120"/>
                        <TextBlock Text="{Binding ClassName}" Width="80"/>
                        <TextBlock Text="{Binding Salary, StringFormat='{}{0} or'}" Width="60"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>



        <Button Content="Recruter"
                HorizontalAlignment="Center"
                Click="OnRecruit"/>

    </StackPanel>
</Window>